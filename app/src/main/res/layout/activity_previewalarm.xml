<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarmTitle_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtitle_apa"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alarmTitle1_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtitle_apa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:focusable="false"/>

        <TextView
            android:id="@+id/alarmDate_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmdate_apa"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alarmDate1_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmdate_apa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:focusable="false"/>

        <TextView
            android:id="@+id/alarmTone_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtone_apa"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alarmTone1_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtone_apa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:focusable="false"/>


        <TextView
            android:id="@+id/alarmType_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtype_apa"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alarmType1_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmtype_apa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:focusable="false"/>

        <TextView
            android:id="@+id/alarmSnooze_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmsnooze_apa"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alarmSnooze1_textView_apa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmsnooze_apa"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:focusable="false"/>




    </LinearLayout>

</ScrollView>